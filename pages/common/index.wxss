.index-hd {
    padding: 80rpx;
    text-align: center;
}

.index-bd {
    padding: 0 30rpx 40rpx;
}

.index-logo {
    width: 86rpx;
    height: 86rpx;
}

.kind-list-item {
    margin: 20rpx 0;
    background-color: #FFFFFF;
    border-radius: 4rpx;
    overflow: hidden;
}

.kind-list-item:first-child {
    margin-top: 0;

}

.kind-list-item-hd {
    display: flex;
    padding: 30rpx;
}

.kind-list-item-hd-show {
    opacity: .8;
}

.kind-list-img {
    width: 60rpx;
    height: 60rpx;
}

.kind-list-text {
    flex: 1 1 auto;
}
